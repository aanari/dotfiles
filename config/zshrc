[[ -f ~/perl5/perlbrew/etc/perlbrew-completion.bash ]] && . ~/perl5/perlbrew/etc/perlbrew-completion.bash
. ~/.fresh/build/themes/powerline9k.zsh-theme

if [[ "$(uname)" == "Darwin" ]]; then
    eval `gdircolors ~/.dir_colors`
elif [[ "$(expr substr $(uname -s) 1 5)" == "Linux" ]]; then
    eval `dircolors ~/.dir_colors`
fi

zstyle ':completion:*' list-colors "${(@s.:.)LS_COLORS}"
autoload -Uz compinit
compinit

unsetopt BG_NICE

zmodload zsh/terminfo
bindkey "$terminfo[kcuu1]" history-substring-search-up
bindkey "$terminfo[kcud1]" history-substring-search-down
bindkey "$terminfo[cuu1]" history-substring-search-up
bindkey "$terminfo[cud1]" history-substring-search-down

eval "$(direnv hook zsh)"

[[ -f /usr/local/bin/aws_zsh_completer.sh ]] && . /usr/local/bin/aws_zsh_completer.sh
